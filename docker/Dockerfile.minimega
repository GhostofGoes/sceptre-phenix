FROM ghcr.io/activeshadow/minimega/minimega:latest

# iptables needed in minimega container for scorch and tap apps
RUN apt update && apt install -y iptables \
  && apt autoremove -y \
  && apt clean -y \
  && rm -rf /var/lib/apt/lists/* \
  && rm -rf /var/cache/apt/archives/*

COPY ./minimega-entrypoint.sh /minimega-entrypoint.sh
RUN  chmod +x /minimega-entrypoint.sh

ENTRYPOINT ["/minimega-entrypoint.sh"]
CMD ["/start-minimega.sh"]
